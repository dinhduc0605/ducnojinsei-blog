<% content_for :title, "##{@tag.name}" %>
<% content_for :description, "Các bài viết theo tag ##{@tag.name}" %>
<% content_for :body_class, 'tag-page' %>

<% content_for :css_tags do %>
  <%= stylesheet_link_tag 'home', media: 'all' %>
  <%= stylesheet_link_tag 'sidebar', media: 'all' %>
  <%= stylesheet_link_tag 'tag', media: 'all' %>
<% end %>

<!-- Page Header -->
<header class="masthead" style="background-image: url('<%= image_path 'label_tag.jpg' %>')">
  <div class="overlay"></div>
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
        <div class="site-heading">
          <h2><%= "##{@tag.name}" %></h2>
        </div>
      </div>
    </div>
  </div>
</header>

<!-- Main Content -->
<div class="container">
  <div class="row">
    <div class="col-lg-8 col-md-10 mx-auto">
      <div class="post-list">
        <%= render @posts %>
      </div>
    </div>
  </div>
</div>
