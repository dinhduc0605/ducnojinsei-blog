<!-- Page Header -->
<header class="masthead" style="background-image: url('<%= image_path 'japan.jpg' %>')">
  <div class="overlay"></div>
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
        <div class="site-heading">
          <h2>"You can't connect the dots looking forward; you can only connect them looking backwards.
            So you have to trust that the dots will somehow connect in your future"</h2>
          <span class="subheading">Steve Jobs</span>
        </div>
      </div>
    </div>
  </div>
</header>

<!-- Main Content -->
<div class="container">
  <div class="row">
    <div class="col-lg-8 col-md-10 mx-auto">
      <%= render @japan_posts %>
      <!-- Pager -->
      <div class="clearfix">
        <a class="btn btn-primary float-right" href="#">Older Posts &rarr;</a>
      </div>
    </div>
  </div>
</div>

<hr>
