<div class="row post-item" data-id="<%= post.id %>">
  <div class="cover col-sm-12 col-md-5">
    <a href="<%= post_url(post) %>">
      <%= image_tag post.cover_url %>
    </a>
  </div>
  <div class="detail col-sm-12 col-md-7">
    <div class="title">
      <a href="<%= post_url(post) %>"><%= post.title %></a>
    </div>
    <div class="info">
      <div class="author">by <span><%= post.user.name %></span></div>
      <div class="published_date"> <%= post.created_at.to_date %></div>
    </div>
    <div class="description">
      <%= post.description %>
    </div>
    <div class="tags">
      <i class="fas fa-tag"></i>
      <% post.tags.each do |tag| %>
        <%= link_to tag.name, tag_url(tag), class: 'black' %>
      <% end %>
    </div>
  </div>
</div>
