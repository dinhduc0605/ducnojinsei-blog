<div class="card-header">
  <h4 class="card-title">Posts Table</h4>
</div>
<div class="card-body">
  <%= search_form_for [:admin, @q] do |f| %>
    <div class="row">
      <div class="col-md-5"></div>
      <div class="col-md-2 btn-group-vertical">
        <%= f.select :category_eq, {Post::CATEGORIES[0] => 0, Post::CATEGORIES[1] => 1, Post::CATEGORIES[2] => 2}, { include_blank: 'Select one...'}, class: 'form-control' %>
      </div>
      <div class="col-md-3 btn-group-vertical no-padding">
        <%= f.search_field :title_cont, class: 'form-control', placeholder: t('.search_placeholder') %>
      </div>
      <div class="col-md-2">
        <%= button_tag class: 'btn btn-primary btn-icon btn-round btn-simple' do %>
          <i class="fa fa-search"></i>
        <% end %>
        <%= link_to new_admin_post_url, class: 'btn btn-success btn-icon btn-round' do %>
          <i class="fa fa-plus" aria-hidden="true"></i>
        <% end %>
      </div>
    </div>
  <% end %>
  <div class="table-responsive">
    <table class="table data-table">
      <thead class="text-primary">
      <tr>
        <th><%= t 'stt' %></th>
        <th class="no-sort"><%= Post.human_attribute_name(:cover) %></th>
        <th><%= Post.human_attribute_name(:title) %></th>
        <th><%= Post.human_attribute_name(:category) %></th>
        <th class="no-sort"></th>
      </tr>
      </thead>
      <tbody>
      <%= render @posts %>
      </tbody>
    </table>
  </div>
</div>
