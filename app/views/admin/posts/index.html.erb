<div class="header">
  <%= link_to new_admin_post_url, class: 'btn btn-primary' do %>
    <i class="fas fa-plus-circle"></i> <%= t '.new' %>
  <% end %>

  <%= form_tag nil, class: 'form-search form-inline' do %>
    <%= text_field_tag :name, nil, class: 'form-control', placeholder: t('.search_placeholder') %>
    <%= button_tag class: 'btn btn-primary', style: 'margin-left: 5px' do %>
      <i class="fas fa-search"></i>
    <% end %>
  <% end %>
</div>

<table class="table">
  <thead class="table-primary">
  <tr>
    <th><%= t 'stt' %></th>
    <th><%= Post.human_attribute_name(:cover) %></th>
    <th><%= Post.human_attribute_name(:title) %></th>
    <th><%= Post.human_attribute_name(:category) %></th>
    <th></th>
  </tr>
  </thead>
  <tbody>
  <%= render @posts %>
  </tbody>
</table>