<%= form_for [:admin, @post], multipart: true do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="row justify-content-center">
    <div class="col-md-8 margin-20">
      <div class="rounded" id="background-preview" style="background-image: url(<%= asset_path background_url(@post) %>);">
        <%= f.file_field :cover %>
      </div>
      <div class="form-group" style="margin-top: 20px">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control' %>
      </div>

      <div class="form-group" style="margin-top: 20px">
        <%= f.label :description %>
        <%= f.text_field :description, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :content %>
        <%= f.text_area :content, class: 'form-control', rows: 10 %>
        <div class="stackedit-button-wrapper">
          <a id="edit-with-stackedit"><img src="<%= image_path 'stackedit.svg' %>" style="width: 20px">Edit with StackEdit</a>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :category_id %>
        <%= f.select :category_id, options_from_collection_for_select(Category.all, :id, :name), {include_blank: 'Select from below'}, class: 'form-control'  %>
      </div>

      <div class="form-group">
        <%= label_tag :tag %>
        <ul id="form-tags">
          <% @post.tags.each do |tag| %>
            <li><%= tag.name %></li>
          <% end %>
        </ul>
      </div>

      <%= f.submit t('submit'), class: 'btn btn-primary btn-round full-width' %>
    </div>
  </div>
<% end %>