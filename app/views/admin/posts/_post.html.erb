<tr class="post-<%= post.id %> post-row">
  <td class="text-center"><%= post_counter + 1 %></td>
  <td><%= image_tag image_url(post.cover), class: 'rounded list-avatar' %></td>
  <td><%= link_to post.title, admin_post_url(post) %></td>
  <td><%= post.category.name %></td>
  <td class="text-center">
    <%= link_to edit_admin_post_url(post), class: 'btn btn-primary btn-icon btn-round' do %>
      <i class="fa fa-pencil-square-o"></i>
    <% end %>
    <%= link_to admin_post_url(post), method: :delete, class: 'btn btn-danger btn-icon btn-round', 'data-confirm': t('.data_confirm') do %>
      <i class="fa fa-trash-o"></i>
    <% end %>
  </td>
</tr>