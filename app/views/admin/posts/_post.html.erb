<tr class="post-<%= post.id %> post-row">
  <td class="text-center"><%= post_counter + 1 %></td>
  <td><%= image_tag background_url(post), class: 'rounded list-avatar' %></td>
  <td><%= link_to post.title, admin_post_url(post) %></td>
  <td><%= Post::CATEGORIES[post.category] %></td>
  <td class="text-center">
    <%= link_to edit_admin_post_url(post), class: 'btn btn-primary' do %>
      <i class="fas fa-edit"></i>
    <% end %>
    <%= link_to admin_post_url(post), method: :delete, class: 'btn btn-danger', 'data-confirm': t('.data_confirm') do %>
      <i class="fas fa-trash"></i>
    <% end %>
  </td>
</tr>