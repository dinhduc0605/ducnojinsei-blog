<%= form_for [:admin, @category], multipart: true do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="row justify-content-center">
    <div class="col-md-8 margin-20">
      <div class="rounded" id="background-preview" style="background-image: url(<%= asset_path image_url(@category.image) %>);">
        <%= f.file_field :image %>
      </div>
      <div class="form-group" style="margin-top: 20px">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
      <%= f.submit t('submit'), class: 'btn btn-primary btn-round full-width' %>
    </div>
  </div>
<% end %>