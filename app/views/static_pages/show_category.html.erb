<% content_for :title, "NDD Blog | #{@category.name}" %>

<!-- Page Header -->
<header class="masthead" style="background-image: url('<%= image_path @category.image %>')">
  <div class="overlay"></div>
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
        <div class="site-heading">
          <h2><%= @category.name %></h2>
        </div>
      </div>
    </div>
  </div>
</header>

<!-- Main Content -->
<div class="container">
  <div class="row">
    <div class="col-lg-8 col-md-10 mx-auto">
      <div class="post-list">
        <%= render @posts %>
      </div>
      <% unless @load_done %>
        <div class="load-more-wrapper">
          <%= image_tag 'loading.gif', class: 'loading-gif' %>
          <!-- Pager -->
          <div class="clearfix">
            <%= link_to "Older Posts &rarr;".html_safe, "/#{@category.slug}", class: 'btn btn-primary float-right load-more' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<hr>
