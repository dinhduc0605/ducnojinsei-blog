<% content_for :title, "#{@category.name}" %>
<% content_for :description, "NDD Blog | #{@category.name}" %>

<% content_for :css_tags do %>
  <%= stylesheet_link_tag 'home', media: 'all' %>
  <%= stylesheet_link_tag 'sidebar', media: 'all' %>
<% end %>

<!-- Page Header -->
<header class="masthead" style="background-image: url('<%= image_path @category.image %>')">
  <div class="overlay"></div>
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
        <div class="site-heading">
          <h2><%= @category.name %></h2>
        </div>
      </div>
    </div>
  </div>
</header>

<!-- Main Content -->
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-lg-9">
      <div class="post-list">
        <%= render @posts %>
      </div>
      <%= paginate @posts %>
    </div>
    <div class="col-sm-12 col-lg-3">
      <%= render 'shared/sidebar', popular_posts: @popular_posts %>
    </div>
  </div>
</div>
